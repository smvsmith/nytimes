<% flash.each do |name, message| %>
  <% if name == 'alert' %>
  <div class="warning"><%= message %></div>
  <% elsif name == 'notice' %>
  <div class="success"><%= message %></div>
  <% end %>
<% end %>

<h2><%= @article.title %></h2>

<p><%= @article.body %></p>

<% if !@article.comments? %>
<h3>Comments</h3>
<%= form_for [@article, @comment] do |f| %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <br>
  <%= f.submit %>
<% end %>
<% @article.comments.each do |comment| %>
  <p><%= comment.body %></p>
<% end %>
<% end %>
